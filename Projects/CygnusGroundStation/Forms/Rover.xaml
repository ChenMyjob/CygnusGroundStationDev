				<Ellipse Canvas.Top="8" Canvas.Left="8" Height="164" Width="164" Stroke="#808080" StrokeThickness="1.5"/>

				<!-- Scale -->
				<c:CircularScale Canvas.Top="12" Canvas.Left="12"
