											 StartAngle="140" EndAngle="400" 
											 MajorTickColor="White" MajorTickThickness="3" MajorTickCount="15" Width="156" Height="156"
											 MinorTickCount="5" MinorTickThickness="1.5" MinorTickLength="5"
											 ScaleMin="0" ScaleMax="15"
