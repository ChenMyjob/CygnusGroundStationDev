				<Path Canvas.Left="13" Canvas.Top="153" Style="{StaticResource ScrewStyle}" Data="{StaticResource ScrewData}"/>
				<Path Canvas.Left="153" Canvas.Top="153" Style="{StaticResource ScrewStyle}" Data="{StaticResource ScrewData}"/>

