<UserControl x:Class="CygnusGroundStation.Dialogs.AboutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid Background="{DynamicResource Background}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="70"/>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="70"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<Image  Source="../Images/logo_large_64.png" Margin="3"/>

		<StackPanel Grid.Column="1" Margin="5,5,0,0">
			<TextBlock Text="Cygnus Ground Station" FontFamily="Arial" FontSize="16" FontWeight="Bold" Margin="0,0,0,3"/>
			<TextBlock Text="Copyright (c)2013-2016 Laszlo Arvai" />
			<TextBlock Text="Version: 0.1" />
		</StackPanel>
	</Grid>
</UserControl>
